<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/manule"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:text=" For User Manual click Here"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"/>

            <com.google.android.gms.ads.AdView
                android:id="@+id/bannerAdView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <!-- Unit 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/button_unit1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/img_1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/unit1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate of Drying"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Unit 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/button_unit2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/img_2"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/unit2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crystallization-Yield %"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Unit 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/button_unit3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/img_3"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/unit3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diffusion"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Unit 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/button_unit4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/img_4"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/unit4_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crystallization-Yield Comparison"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Unit 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/button_unit5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/img_5"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crystallization-EVA %"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>
        <!--Molecular weight calculator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/button_Molarcalc"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/img_7"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/unit5_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Molecular Weight Calculator"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>
        <!-- Study -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/button_unit6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/img_6"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/unit6_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Study Material"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
