<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unit5img">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <!-- Layout 1 for input fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1359dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="CRYSTALLIZATION EVA 0%"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="       "
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Feed in KG"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Xf KG"
                android:textColorHint="@color/black"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Mole fraction of feed[Xf] in %"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Don't include % symbol"
                android:textColorHint="@color/black"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Assuming Evaporation as 0%"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="(E=0)"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Enter Molecular Weight of Component"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Molecular weight"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Enter Molecular Weight of Component with Water added"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total Molecular weight"
                android:textColorHint="@color/black"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Enter Solubality in KG"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Just enter number"
                android:textColorHint="@color/black"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Enter Solvent in KG"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Just enter number"
                android:textColorHint="@color/black"
                android:textColor="@color/black"/>

            <!-- Submit Button -->
            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Calculate"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textStyle="bold"/>


            <!-- Layout 2 for result display -->

            <!-- Results TextViews -->
            <TextView
                android:id="@+id/resultA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feed in grams       :"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/resultB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result of XF          :"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/resultC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value of E              :"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/resultD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Molecular weight  :"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/resultE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value of Xc            :"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/resultF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value of Xm           :"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/resultG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M Value                 :"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/resultH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C Value                  :"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/resultI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculated Yield is  "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
            <!--  case 2 new series -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="                       "
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text=""
                android:textColor="@color/black" />

            <!-- Submit Button -->

            <!-- Layout 2 for result display -->

            <!-- Results TextViews -->

        </LinearLayout>

    </LinearLayout>

</ScrollView>
